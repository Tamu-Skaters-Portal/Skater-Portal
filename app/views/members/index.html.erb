<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Points</th>
      <th>Paid status</th>
      <th>Access type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= link_to "Sign in with Google", member_github_omniauth_authorize_path(:google_oauth2) %>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.email %></td>
        <td><%= member.points %></td>
        <td><%= member.paid_status %></td>
        <td><%= member.access_type %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>
