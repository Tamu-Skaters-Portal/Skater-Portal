<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Member and Officers can change %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <%# Members and Officers can change %>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <%# Will be deleted eventually%>
  <div class="field">
    <%= form.label :token %>
    <%= form.text_field :token %>
  </div>

  <%# Only Officers can change %>
  <%@current_member ||= Member.find_by_token(cookies[:token]) if cookies[:token]%>
  <% if @current_member && @current_member.access_type == 1 %> 
    <div class="field">
      <%= form.label :access_type %>
      <%= form.number_field :access_type %>
    </div>

    <%# Only Officers can change %>
    <div class="field">
      <%= form.label :paid_status %>
      <%= form.number_field :paid_status %>
    </div>

    <%# Only Officers can change %>
    <div class="field">
      <%= form.label :points %>
      <%= form.number_field :points %>
    </div>

  <%else%>
  <%#! Else should be empty be default %>



  <%end%>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
